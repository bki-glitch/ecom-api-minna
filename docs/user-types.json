{
  "paths": {
    "/api/user-types": {
      "get": {
        "tags": ["user-types"],
        "summary": "Get all user types",
        "description": "Retrieve a list of all user types",
        "responses": {
          "200": {
            "description": "List of user types retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserType"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["user-types"],
        "summary": "Create a new user type",
        "description": "Create a new user type with user_type and status parameters",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_type": {
                    "type": "string",
                    "description": "The type/name of the user type",
                    "example": "Administrator"
                  },
                  "status": {
                    "type": "string",
                    "enum": ["active", "inactive"],
                    "description": "Status of the user type",
                    "default": "active"
                  },
                  "description": {
                    "type": "string",
                    "description": "Optional description of the user type",
                    "nullable": true
                  }
                },
                "required": ["user_type"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User type created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserType"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - missing required fields or invalid data"
          },
          "409": {
            "description": "Conflict - user type already exists"
          }
        }
      }
    },
    "/api/user-types/active": {
      "get": {
        "tags": ["user-types"],
        "summary": "Get active user types",
        "description": "Retrieve a list of all active user types only",
        "responses": {
          "200": {
            "description": "List of active user types retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserType"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user-types/{id}": {
      "get": {
        "tags": ["user-types"],
        "summary": "Get user type by ID",
        "description": "Retrieve a specific user type by its ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "User type ID"
          }
        ],
        "responses": {
          "200": {
            "description": "User type retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserType"
                }
              }
            }
          },
          "404": {
            "description": "User type not found"
          }
        }
      },
      "put": {
        "tags": ["user-types"],
        "summary": "Update user type",
        "description": "Update an existing user type",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "User type ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_type": {
                    "type": "string",
                    "description": "The type/name of the user type"
                  },
                  "status": {
                    "type": "string",
                    "enum": ["active", "inactive"],
                    "description": "Status of the user type"
                  },
                  "description": {
                    "type": "string",
                    "description": "Description of the user type",
                    "nullable": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User type updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserType"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - invalid data"
          },
          "404": {
            "description": "User type not found"
          },
          "409": {
            "description": "Conflict - user type name already exists"
          }
        }
      },
      "delete": {
        "tags": ["user-types"],
        "summary": "Delete user type",
        "description": "Delete a user type by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "User type ID"
          }
        ],
        "responses": {
          "200": {
            "description": "User type deleted successfully"
          },
          "404": {
            "description": "User type not found"
          },
          "500": {
            "description": "Failed to delete user type"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserType": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier for the user type"
          },
          "user_type": {
            "type": "string",
            "description": "The type/name of the user type"
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive"],
            "description": "Status of the user type"
          },
          "description": {
            "type": "string",
            "description": "Description of the user type",
            "nullable": true
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          }
        }
      }
    }
  }
}
